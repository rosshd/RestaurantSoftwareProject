<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.LoginScreenController"
      spacing="20.0" alignment="CENTER" style="-fx-background-color: lightblue; -fx-padding: 30px;">

    <Label text="Login" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: black;"/>

    <Label text="(Host: 1234, Busboy: 2345, Server: 3456, Cook: 4567, Manager: 5678)"
           style="-fx-font-size: 16px; -fx-text-fill: black; -fx-padding: 10px;"/>

    <Label fx:id="pinDisplay" text="Enter PIN" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: black;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <!-- First row -->
        <Button text="1" onAction="#handleNumberButton" GridPane.columnIndex="0" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
        <Button text="2" onAction="#handleNumberButton" GridPane.columnIndex="1" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
        <Button text="3" onAction="#handleNumberButton" GridPane.columnIndex="2" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>

        <!-- Second row -->
        <Button text="4" onAction="#handleNumberButton" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
        <Button text="5" onAction="#handleNumberButton" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
        <Button text="6" onAction="#handleNumberButton" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>

        <!-- Third row -->
        <Button text="7" onAction="#handleNumberButton" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
        <Button text="8" onAction="#handleNumberButton" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
        <Button text="9" onAction="#handleNumberButton" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
    </GridPane>

    <GridPane hgap="10" alignment="CENTER">
        <!-- Fourth row -->
        <Button text="Clear" onAction="#handleClearButton" GridPane.rowIndex="3" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
        <Button text="0" onAction="#handleNumberButton" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
        <Button text="Enter" onAction="#handleEnterButton" GridPane.rowIndex="3" GridPane.columnIndex="2" style="-fx-font-size: 20px; -fx-pref-width: 70px; -fx-pref-height: 70px;"/>
    </GridPane>

</VBox>
